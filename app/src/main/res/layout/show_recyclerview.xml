<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:backgroundTint="@color/button_color"
    android:id="@+id/constraintLayout"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="14"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:minWidth="2dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvSr_No"
            android:layout_weight="2"
            android:text="1."
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDRreport"
            android:layout_weight="7"
            android:text="details"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:minWidth="1dp"
            android:layout_height="match_parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ibtn_drattachment"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_description_gray_24dp"
            android:visibility="visible" />

        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:minWidth="1dp"
            android:layout_height="match_parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
           android:layout_weight="0.0"
            android:layout_marginRight="1dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_close_black_24dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:paddingLeft="@dimen/cardview_compat_inset_shadow"
            android:id="@+id/txtOptionDigit"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>