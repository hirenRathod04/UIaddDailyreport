<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="@id/con1"
            app:layout_constraintStart_toStartOf="@id/con1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/backgroundquare"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvSr_No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="15dp"
                    android:layout_gravity="top"
                    android:paddingBottom="5dp"
                    android:text="1."
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvDRreport"
                    android:paddingTop="15dp"
                    android:layout_gravity="top"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"

                    android:paddingBottom="5dp"
                    android:text="details"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ibtn_drattachment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_description_gray_24dp"
                    android:visibility="visible"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/txtOptionDigit"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="&#8942;"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/ic_edit_white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_green"
                    android:text="Edit" />


                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/ic_delete_white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_red"
                    android:text="delete" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>