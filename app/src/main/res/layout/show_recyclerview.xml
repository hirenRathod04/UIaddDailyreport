<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="match_parent"



    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="290dp"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
       >

        <HorizontalScrollView


            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fillViewport="true"
            android:scrollbars="horizontal|vertical"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintStart_toStartOf="@id/con1"
                    app:layout_constraintTop_toTopOf="@id/con1">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/backgroundquare"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView

                            android:id="@+id/tvSr_No"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="15dp"

                            android:paddingBottom="5dp"
                            android:text="1."
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView


                            android:id="@+id/tvDRreport"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:paddingTop="15dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="15dp"
                            android:text="details"
                            android:textColor="@color/white"
                            android:textSize="15dp" />


                        <de.hdodenhof.circleimageview.CircleImageView


                            android:id="@+id/ibtn_drattachment"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:padding="10dp"
                            android:src="@drawable/ic_description_gray_24dp"
                            android:visibility="visible"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="1dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />


                        <TextView
                            android:id="@+id/txtOptionDigit"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text="&#8942;"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:visibility="gone" />

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_green"
                            android:padding="10dp"
                            android:src="@drawable/ic_edit_white"
                            android:text="Edit" />


                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_red"
                            android:padding="10dp"
                            android:src="@drawable/ic_delete_white"
                            android:text="delete" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>