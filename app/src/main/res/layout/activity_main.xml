<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Button
       android:id="@+id/btnAddReport"
       android:text="Add Report"
       android:background="@drawable/button_background"
       app:backgroundTint="@color/button_color"
       android:textAllCaps="false"
       android:textColor="@color/white"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="35dp"
       android:layout_marginEnd="55dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   <LinearLayout
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btnAddReport"
       android:layout_marginTop="50dp"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
      android:orientation="horizontal">
      <HorizontalScrollView
          android:layout_width="110dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fillViewport="true"
          android:scrollbars="horizontal|vertical" >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal" >

            <ImageView

                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/shivang2" />

            <ImageView

                android:layout_width="125dp"
                android:layout_height="125dp"

                android:src="@drawable/shivang2" />

            <ImageView
                android:id="@+id/viewImage1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/shivang2" />

            <ImageView
                android:id="@+id/viewImage3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="15dp"
                android:src="@drawable/shivang2" />
            <ImageView

                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="15dp"
                android:src="@drawable/shivang2" />
            <ImageView
                android:id="@+id/viewImage2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="15dp"
                android:src="@drawable/shivang2" />

         </LinearLayout>
      </HorizontalScrollView>
   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>